color=#eeeeee
separator=false
separator_block_width=10
full_text=|

[pomodoro]
command=$HOME/.local/bin/pomodoro -i
interval=5

[separator]

[networks]
command=/home/pfsmorigo/.config/i3blocks/networks
interval=5

[separator]

[cpu]
label=
command=/usr/local/libexec/i3blocks/cpu_usage
interval=10
#min_width=CPU: 100.00%
#separator=false

[load]
label=
command=/usr/local/libexec/i3blocks/load_average
interval=10

[memory]
label=
command=/usr/local/libexec/i3blocks/memory
separator=false
interval=30

[swap]
label=
command=/usr/local/libexec/i3blocks/memory swap
interval=30

[disk-root]
label=
command=/usr/local/libexec/i3blocks/disk /
interval=30

[disk-home]
label=
command=/usr/local/libexec/i3blocks/disk $HOmE
interval=30

[separator]

[temp]
label=
command=echo $(acpi -t | awk '{ print $4 }' | cut -d. -f1)°C
interval=2

[battery]
label=
command=/usr/local/libexec/i3blocks/battery BAT0
interval=30

[separator]

[volume]
label=
command=/usr/local/libexec/i3blocks/volume
interval=once
signal=10

[separator]

[time]
command=date '+ %a, %b %d %H:%M:%S %Z'
interval=5

