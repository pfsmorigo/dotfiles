interval=2

[yumupdate]
command=$HOME/projects/smowlinux/scripts/i3blocks/$BLOCK_NAME
interval=240

[pomodoro]
command=$HOME/.local/bin/pomodoro -i
interval=5

[networks]
command=$HOME/projects/smowlinux/scripts/i3blocks/$BLOCK_NAME
interval=5

[cpu_usage]
interval=10

[load_average]
interval=10

[memory]
interval=30

[memory]
instance=swap
interval=30

[disk]
instance=/
interval=30

[disk]
instance=/home
interval=30

[temperature]
command=$HOME/projects/smowlinux/scripts/i3blocks/$BLOCK_NAME
interval=2

[fanspeed]
command=grep speed /proc/acpi/ibm/fan | awk '{ print $2 }'
interval=2

[battery]
interval=30

[volume]
interval=once
signal=10
separator_block_width=10
separator=false

[mic]
