bar {
	output LVDS1
	position top
	status_command i3blocks
	tray_output LVDS1
	colors {
		$background
		$statusline
		$barcolor1
		$barcolor2
		$barcolor3
		$barcolor4
	}
}

# Workspace settings
workspace $w1 output LVDS1
workspace $w2 output LVDS1
workspace $w3 output LVDS1
workspace $w4 output LVDS1
workspace $w5 output LVDS1
