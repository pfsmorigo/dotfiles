separator=false

[hddtemp]
command=nc -w1 localhost 7634 | awk -F'|' '{print $4 "°C " $9 "°C " $14 "°C"}'
interval=5

[volume-pulseaudio]
command=$HOME/projects/i3blocks-contrib/volume-pulseaudio/$BLOCK_NAME
interval=once
signal=10

[stopwatch_countdown]
interval=1
instance=paplay /usr/share/sounds/freedesktop/stereo/alarm-clock-elapsed.oga

[time]
command=TZ=US/Central date +"%kh%M %Z" | sed 's/^ //g'
interval=30

[time]
command=TZ=America/New_York date +"%kh%M %Z" | sed 's/^ //g'
interval=30

[time]
